generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Category {
  name        String
  displayName String
}

type PaymentType {
  name        String
  displayName String
}

model FinestraAccount {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String     @unique
  admin      String
  users      String[]
  categories Category[]
  paymentTypes String[]
  monthCycle Int
}

model Transaction {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  price       Float
  billingDate DateTime
  createdAt   DateTime  @default(now())
  description String
  category    Category 
  accountId   String
  userId      String
  paymentType String
}