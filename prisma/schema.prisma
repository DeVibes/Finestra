generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Category {
  name        String
  displayName String
}

type PaymentType {
  name        String
  displayName String
}

model FinestraAccount {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String        @unique
  admin        String
  users        String[]
  categories   Category[]
  paymentTypes PaymentType[]
  monthCycle   Int
}

model FinestraTransaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  price       Float
  billingDate String
  createdAt   DateTime @default(now())
  issuedAt    String
  description String
  store       String
  category    String
  accountId   String
  userId      String
  paymentType String
  income      Boolean  @default(false)
}
