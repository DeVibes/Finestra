generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Category {
  name        String
  displayName String
}

type PaymentType {
  name        String
  displayName String
}

model FinestraAccount {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String     @unique
  admin      String
  users      String[]
  categories Category[]
  paymentTypes PaymentType[]
  monthCycle Int
}

model Transaction {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  price       Float
  date        DateTime
  description String
  category    Category 
  account     String
  useremail   String
  paymentType String
}